@model List<PumpedUpKicks.Models.ShoppingCartItem>

@{ 
    ViewData["Title"] = "Index";
}

@if(Model.Count() > 0)
{
    <h1 class="cart-view">View Cart</h1>
    <table cellpadding="2" cellspacing="2" border="1">
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td><img src="@item.ImageUrl" width="312" height="212" /></td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td><a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
    <div class="addItem">
        <a href="../../shop/index">add item</a> | 
        <a asp-action="Index" asp-controller="Checkout"> checkout</a>
    </div>
}
else
{
    <div class="empty-cart">
        <p>No Shopping Cart Item</p>
        <a href="../../shop/index">view shop</a>
        <br>
    </div>
}